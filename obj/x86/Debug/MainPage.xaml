<Page
    x:Class="PracticeUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PracticeUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <AppBar IsOpen="True" Margin="0 12 0 25">
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <AppBarButton Grid.Column="0" Icon="Clock"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right">
                    <AppBarButton x:ConnectionId='7' Icon="Stop" Content="View Galley"                           />
                    <AppBarSeparator/>
                    <AppBarButton Icon="Help" Content="Help"/>
                </StackPanel>
            </Grid>
        </AppBar>
        <TextBlock x:ConnectionId='2' x:Name="Page1" Text="Demo AppBar" Style="{ThemeResource HeaderTextBlockStyle}" Margin="20 0 0 0"/>
        <StackPanel x:ConnectionId='3' Visibility="Collapsed" x:Name="Page2">
            <StackPanel Orientation="Horizontal">
                <Button x:ConnectionId='6'                       >
                    <SymbolIcon Symbol="Back"/>
                </Button>
                <TextBlock Text="Photo Gallery" Style="{ThemeResource HeaderTextBlockStyle}" Margin="20 0 0 0"/>
            </StackPanel>
            <Button x:ConnectionId='4' Content="Get photo"                     ></Button>
            <Image x:ConnectionId='5' x:Name="Image" Height="500" Width="500"/>
        </StackPanel>
    </StackPanel>
</Page>

